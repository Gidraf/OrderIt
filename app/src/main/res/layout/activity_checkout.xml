<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CheckoutActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/checkout_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_dehaze_black_24dp"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:id="@+id/checkout_home_image"/>
            <LinearLayout
                android:id="@+id/title_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_logo_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logo_name"
                    android:textColor="@android:color/background_dark"
                    android:fontFamily="@font/adventpro_light"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_logo_line" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/title_holder"
        android:layout_below="@id/checkout_toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_bold"
                android:id="@+id/address_tab_text_view"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="ADDRESS"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_bold"
                android:id="@+id/payment_tab_text_view"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:text="PAYMENT"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_bold"
                android:id="@+id/complete_tab_text_view"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:text="COMPLETE"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_logo_line"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    android:id="@+id/address_polygon"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_black_polygon"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_logo_line"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    android:id="@+id/payment_polygon"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_black_polygon"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_logo_line"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    android:id="@+id/complete_polygon"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_black_polygon"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.g_draflab.orderit.Fragments.AddressFragment"
        tools:layout="@layout/fragment_address"
        android:layout_below="@id/title_holder"
        android:id="@+id/address_fragment"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.g_draflab.orderit.Fragments.PaymentFragment"
        tools:layout="@layout/fragment_payment"
        android:layout_below="@id/title_holder"
        android:id="@+id/payment_fragment"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.g_draflab.orderit.Fragments.CompleteFragment"
        tools:layout="@layout/fragment_complete"
        android:layout_below="@id/title_holder"
        android:id="@+id/complete_fragment"/>
</RelativeLayout>