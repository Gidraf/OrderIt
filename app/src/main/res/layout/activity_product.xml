<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProductActivity">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_text_view"
            android:layout_toStartOf="@id/product_close"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="title"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_toLeftOf="@id/product_close" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/product_close"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@id/product_toolbar"
        android:layout_above="@id/product_indicator"
        android:id="@+id/product_viewPager"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/product_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        android:layout_above="@id/product_description_text_view"
        android:padding="10dp"
        app:tabIndicatorHeight="0dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="@font/sourcesanspro_light"
        android:padding="10dp"
        android:id="@+id/product_description_text_view"
        android:layout_above="@id/product_bottom_container"
        android:layout_margin="20dp"
        android:background="@color/colorPrimaryDark"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:id="@+id/product_bottom_container"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginEnd="2dp"
            android:orientation="vertical"
            android:id="@+id/customize_holder"
            android:layout_weight="1.3"
            android:layout_marginRight="2dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textColor="@android:color/background_dark"
            android:textAlignment="center"
            android:text="@string/customize"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#fff"
            android:layout_marginEnd="2dp"
            android:orientation="vertical"
            android:layout_marginRight="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_price_text_view"
                android:text="120"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@id/add_to_cart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="@font/sourcesanspro_regular"
                android:layout_toLeftOf="@id/add_to_cart"
                android:layout_marginEnd="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_discount_price_text_view"
                android:text="120"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@id/add_to_cart"
                android:layout_below="@id/product_price_text_view"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="@font/sourcesanspro_bold"
                android:layout_toLeftOf="@id/add_to_cart"
                android:layout_marginEnd="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:id="@+id/add_to_cart"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/sourcesanspro_bold"
                android:background="@color/colorAccent"
                android:text="@string/add_to_cart"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"
                android:paddingStart="20dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/attribute_holder"
        android:background="@color/colorPrimaryDarkTranslucent"
        android:layout_above="@id/product_bottom_container"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/size"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_size_recycler_view"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/color"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_color_recycler_view"/>

    </LinearLayout>
</RelativeLayout>