<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PaymentFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:weightSum="2"
        android:id="@+id/image_icon_holder"
        android:paddingStart="20dp"
        android:layout_marginTop="10dp"
        android:paddingRight="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/paypal_icon"
        android:scaleType="fitXY"
        android:layout_weight="1"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/visa_icon"
        android:scaleType="fitXY"
        android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_icon_holder"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/card_details"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="@string/enter_your_debit_or_credit_card_details"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#D8D8D8"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card No:"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1.3"
                android:layout_margin="1dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:padding="5dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:padding="5dp"
                android:inputType="number"
                android:id="@+id/card_number"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:background="@android:color/white"
                android:layout_margin="1dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#D8D8D8"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expiry:"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:padding="5dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:hint="Month"
                android:inputType="number"
                android:id="@+id/exiry_date_month"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:background="@android:color/white"
                android:layout_margin="1dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:hint="Year"
                android:inputType="number"
                android:id="@+id/exiry_date_year"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:background="@android:color/white"
                android:layout_margin="1dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#D8D8D8"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CVC Code:"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1.3"
                android:layout_margin="1dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:padding="5dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:padding="5dp"
                android:id="@+id/cvc_code"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:background="@android:color/white"
                android:layout_margin="1dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/payBtn"
        android:orientation="vertical"
        android:background="#D8D8D8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/ship_to"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/state_textview"
                android:padding="2dp"
                android:fontFamily="@font/sourcesanspro_light"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/city_textview"
                android:padding="2dp"
                android:fontFamily="@font/sourcesanspro_light"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/country_textview"
                android:padding="2dp"
                android:fontFamily="@font/sourcesanspro_light"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_line1_tv"
            android:fontFamily="@font/sourcesanspro_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_line2_tv"
            android:fontFamily="@font/sourcesanspro_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payBtn"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="PAY NOW"
        android:textColor="@android:color/white"
        android:fontFamily="@font/sourcesanspro_bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_edit_icon"
        android:scaleType="fitXY"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="10dp"
        android:layout_above="@id/payBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp" />
</RelativeLayout>